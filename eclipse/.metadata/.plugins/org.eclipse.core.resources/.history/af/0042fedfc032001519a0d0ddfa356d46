package com.magiology.handelers.shaders.core;

import java.util.ArrayList;
import java.util.List;

import scala.math.Ordering.StringOrdering;
import net.minecraft.client.shader.ShaderUniform;
import net.minecraft.util.ResourceLocation;

public abstract class ShaderAspectManager{
	public List<ShaderUniform> uniforms=new ArrayList<ShaderUniform>();
	private final String[] uniformNames;
	private final ResourceLocation shaderLocation;
	
	public ShaderAspectManager(String shaderName,String... uniformNames){
		this.uniformNames=uniformNames;
		shaderLocation=new ResourceLocation("shaders/post/"+shaderName+".json");
	}

	public abstract void update();
	public abstract void redner();
	public abstract boolean getConditionForActivation();
	
	public final String[] getUniformNames(){
		return uniformNames;
	}
	public final ResourceLocation getShaderLocation(){
		return shaderLocation;
	}
}
