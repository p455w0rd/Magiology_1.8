	@EventHandler
    public void preInitStarter(FMLPreInitializationEvent event){
		testOnStartup();
		Runtime.getRuntime().addShutdownHook(new Thread(new Runnable(){
			@Override
			public void run(){
				exit();
			}
		}));
    	loadFiles();
    	message(-1);
    	preInit(event);
    	message(1);
    }
    @EventHandler
    public void initStarter(FMLInitializationEvent event){
    	message(-2);
    	init(event);
    	message(2);
    }
    @EventHandler
    public void postInitStarter(FMLPostInitializationEvent event){
    	message(-3);
    	postInit(event);
    	message(3);
    	message(4);
    }
	public void loadFiles(){}
	public void preInit(FMLPreInitializationEvent event){}
	public void init(FMLInitializationEvent event){}
	public void postInit(FMLPostInitializationEvent event){}
	public void exit(){}
	
	public void message(int a){
    	switch(a){
    	case -1:{
    		println("\n\n_________________________________________________________________");
    		println("----------------------------------------------------------------|");
    		println("==========|> "+NAME+" "+VERSION+"  ->  "+"Pre initialization started! :D |");
    	}break;case 1:{
    		println("==========|> "+NAME+" "+VERSION+" -> "+"Pre initialization compleate! ;D |");
        	println("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
    	}break;
    	case -2:{
        	println("\n\n_________________________________________________________________");
        	println("----------------------------------------------------------------|");
        	println("==========|> "+MODID.toUpperCase()+" "+VERSION+"  ->  "+"Initialization started! :O |");
    	}break;case 2:{
    		println("==========|> "+MODID.toUpperCase()+" "+VERSION+" -> "+"Initialization compleate! XD |");
    		println("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
    	}break;
    	case -3:{
        	println("\n\n_______________________________________________________________________");
        	println("----------------------------------------------------------------------|");
        	println("==========|> "+MODID.toUpperCase()+" "+VERSION+"  ->  "+"Post initialization started! :P |");
    	}break;case 3:{
    		println("==========|> "+MODID.toUpperCase()+" "+VERSION+" -> "+"Post initialization compleate! /D |");
    		println("~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
    	}break;
    	case 4:{
    		String[] derpyMessages={
    				"Umm hello? Are we live? Yup! Yup! Hello everybody we are coming live from "+NAME+" and...",
    				"Yay! the mod is loaded! :D",
