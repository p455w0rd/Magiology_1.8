	@EventHandler
    public void preInitStarter(FMLPreInitializationEvent event){
		testOnStartup();
		Runtime.getRuntime().addShutdownHook(new Thread(new Runnable(){
			@Override
			public void run(){
				exit();
			}
		}));
    	loadFiles();
    	message(-1);
    	preInit(event);
    	message(1);
    }
    @EventHandler
    public void initStarter(FMLInitializationEvent event){
    	message(-2);
    	init(event);
    	message(2);
    }
    @EventHandler
    public void postInitStarter(FMLPostInitializationEvent event){
    	message(-3);
    	postInit(event);
    	message(3);
    	message(4);
    }
	public void loadFiles(){}
	public void preInit(FMLPreInitializationEvent event){}
	public void init(FMLInitializationEvent event){}
	public void postInit(FMLPostInitializationEvent event){}
	public void exit(){}
	
	public void message(int a){
    	switch(a){
    	case(1):{
        	Util.print("\n\n\n_________________________________________________________________");
        	Util.print("\n----------------------------------------------------------------|");
    		Util.print("\n==========|> "+MReference.NAME+" "+MReference.VERSION+" -> "+"Pre initialization compleate! :D |");
        	Util.print("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
    	}break;
    	case(2):{
        	Util.print("\n\n\n_________________________________________________________________");
        	Util.print("\n----------------------------------------------------------------|");
        	Util.print("\n==========|> "+MReference.MODID.toUpperCase()+" "+MReference.VERSION+" -> "+"FML initialization compleate! ;D |");
        	Util.print("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
    	}break;
    	case(3):{
        	Util.print("\n\n\n_______________________________________________________________________");
        	Util.print("\n----------------------------------------------------------------------|");
        	Util.print("\n==========|> "+MReference.MODID.toUpperCase()+" "+MReference.VERSION+" -> "+"FML Post initialization compleate! >:D |");
        	Util.print("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
    	}break;
    	}
    }
}
