package com.magiology.render.forgeobjmodelported.obj;

import net.minecraft.util.ResourceLocation;

import com.magiology.render.objmodel.IModelCustom;
import com.magiology.render.objmodel.IModelCustomLoader;
import com.magiology.render.objmodel.ModelFormatException;

public class ObjModelLoader implements IModelCustomLoader
{

  @Override
  public String getType()
  {
    return "OBJ model";
  }

  private static final String[] types = { "obj" };
  @Override
  public String[] getSuffixes()
  {
    return types;
  }

  @Override
  public IModelCustom loadInstance(ResourceLocation resource) throws ModelFormatException
  {
    return new WavefrontObject(resource);
  }
}