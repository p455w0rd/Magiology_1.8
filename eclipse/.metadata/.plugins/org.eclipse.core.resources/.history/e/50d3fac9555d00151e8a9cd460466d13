package com.magiology.core.init;

import com.magiology.core.MReference;

public class Init{
		public static void Message(int a){
	    	switch(a){
	    	case(1):{
	        	System.out.print("\n\n\n_________________________________________________________________");
	        	System.out.print("\n----------------------------------------------------------------|");
	    		System.out.print("\n==========|> "+MReference.MODID.toUpperCase()+" "+MReference.VERSION+" -> "+"Pre initialization compleate! :D |");
	        	System.out.print("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
	    	}break;
	    	case(2):{
	        	System.out.print("\n\n\n_________________________________________________________________");
	        	System.out.print("\n----------------------------------------------------------------|");
	        	System.out.print("\n==========|> "+MReference.MODID.toUpperCase()+" "+MReference.VERSION+" -> "+"FML initialization compleate! ;D |");
	        	System.out.print("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
	    	}break;
	    	case(3):{
	        	System.out.print("\n\n\n_______________________________________________________________________");
	        	System.out.print("\n----------------------------------------------------------------------|");
	        	System.out.print("\n==========|> "+MReference.MODID.toUpperCase()+" "+MReference.VERSION+" -> "+"FML Post initialization compleate! >:D |");
	        	System.out.print("\n~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~|\n\n\n");
	    	}break;
	    	}
	    }
	}