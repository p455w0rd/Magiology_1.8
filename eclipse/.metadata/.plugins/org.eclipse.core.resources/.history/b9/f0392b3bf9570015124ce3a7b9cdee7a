package com.magiology.util.utilclasses;

public class ArrayMath{
	private static final char mul='*',div='/',add='+',sub='-';
	
	public float[] calc(float value,float[] array,char type){
		return calc(array, value,type);
	}
	public float[] calc(float[] array,float value,char type){
		if(type==mul)for(int i=0;i<array.length;i++)array[i]*=value;
		else if(type==div)for(int i=0;i<array.length;i++)array[i]/=value;
		else if(type==add)for(int i=0;i<array.length;i++)array[i]+=value;
		else if(type==sub)for(int i=0;i<array.length;i++)array[i]-=value;
		return array;
	}
	public float[] calc(float[] array1,float[] array2,char type){
		if(array1.length!=array2.length)throw new IllegalStateException("Diferent array sizes.");
		float[] array3=new float[array1.length];
		if(type==mul)for(int i=0;i<array1.length;i++)array3[i]=array1[i]*array2[i];
		else if(type==div)for(int i=0;i<array1.length;i++)array3[i]=array1[i]/array2[i];
		else if(type==add)for(int i=0;i<array1.length;i++)array3[i]=array1[i]+array2[i];
		else if(type==sub)for(int i=0;i<array1.length;i++)array3[i]=array1[i]-array2[i];
		return array3;
	}
	
	
	public int[] calc(int value,int[] array,char type){
		return calc(array, value,type);
	}
	public int[] calc(int[] array,int value,char type){
		if(type==mul)for(int i=0;i<array.length;i++)array[i]*=value;
		else if(type==div)for(int i=0;i<array.length;i++)array[i]/=value;
		else if(type==add)for(int i=0;i<array.length;i++)array[i]+=value;
		else if(type==sub)for(int i=0;i<array.length;i++)array[i]-=value;
		return array;
	}
	public int[] calc(int[] array1,int[] array2,char type){
		if(array1.length!=array2.length)throw new IllegalStateException("Diferent array sizes.");
		int[] array3=new int[array1.length];
		if(type==mul)for(int i=0;i<array1.length;i++)array3[i]=array1[i]*array2[i];
		else if(type==div)for(int i=0;i<array1.length;i++)array3[i]=array1[i]/array2[i];
		else if(type==add)for(int i=0;i<array1.length;i++)array3[i]=array1[i]+array2[i];
		else if(type==sub)for(int i=0;i<array1.length;i++)array3[i]=array1[i]-array2[i];
		return array3;
	}
	
	
	public double[] calc(double value,double[] array,char type){
		return calc(array, value,type);
	}
	public double[] calc(double[] array,double value,char type){
		if(type==mul)for(int i=0;i<array.length;i++)array[i]*=value;
		else if(type==div)for(int i=0;i<array.length;i++)array[i]/=value;
		else if(type==add)for(int i=0;i<array.length;i++)array[i]+=value;
		else if(type==sub)for(int i=0;i<array.length;i++)array[i]-=value;
		return array;
	}
	public double[] calc(double[] array1,double[] array2,char type){
		if(array1.length!=array2.length)throw new IllegalStateException("Diferent array sizes.");
		double[] array3=new double[array1.length];
		if(type==mul)for(int i=0;i<array1.length;i++)array3[i]=array1[i]*array2[i];
		else if(type==div)for(int i=0;i<array1.length;i++)array3[i]=array1[i]/array2[i];
		else if(type==add)for(int i=0;i<array1.length;i++)array3[i]=array1[i]+array2[i];
		else if(type==sub)for(int i=0;i<array1.length;i++)array3[i]=array1[i]-array2[i];
		return array3;
	}
}
